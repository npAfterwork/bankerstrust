{
  "compilerOptions": {
    "moduleResolution": "node",
    "sourceRoot": "src",
    "lib": [
      "es6",
      "es5"
    ],
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types" : [ "node" ],
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "module": "commonjs",
    "experimentalDecorators": true,
    "outDir": "build"
  },
  "exclude": [
    "node_modules",
    "build",
    "assets"
  ]
}
